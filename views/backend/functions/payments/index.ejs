<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include('./../../layouts/head'); %>
<body>
    <%- include('../../partials/header.ejs'); %>
    <!-- sitebar -->

    <div class="container-fluid">
        <div class="row">
            <%- include('./../../partials/sitebar.ejs'); %>
            <div class="col">
                <h1>Danh sách hình thức thanh toán</h1><a class= "btn btn-primary" href="/backend/payments/create">Thêm</a>
                <hr />
                <div class="table-responsive">
                    <table class="table">
                        <caption>List of products</caption> 
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tên</th>
                            <th scope="col">Hành động</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% list_payment.forEach(function(payment){ %>
                          <tr>
                            <th scope="row"><%= payment.pmt_id %></th>
                            <td><%= payment.pmt_name %> </td>
                            <td>
                              <a href="/backend/payments/update?pmt_id=<%= payment.pmt_id %>" class="btn btn-warning">
                                  <span data-feather="edit">Sửa</span>
                              </a>
                              <a href="/backend/payments/delete?pmt_id=<%= payment.pmt_id %>" class="btn btn-danger">
                                  <span data-feather="delete">Xóa</span>
                              </a>
                            </td>
                          </tr>
                          <% }); %>
                          
                        </tbody>
                    </table>
                  </div>
            </div>
        </div>
    </div>
</body>
</html>