<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include('./../../layouts/head'); %>
<body>
    <%- include('../../partials/header.ejs'); %>
    <!-- sitebar -->

    <div class="container-fluid">
        <div class="row">
            <%- include('./../../partials/sitebar.ejs'); %>
            <div class="col-md-9 col-lg-10">
                <h1>Danh sách hình sản phẩm</h1><a class= "btn btn-primary" href="/backend/product-images/create">Thêm</a>
                <hr />
                <div class="table-responsive">
                    <table class="table">
                        <caption>Danh sách hình sản phẩm</caption> 
                        <thead>
                          <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Tên sản phẩm</th>
                            <th scope="col">Hình</th>
                            <th scope="col">Hành động</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% list_img.forEach(function(img){ %>
                          <tr>
                            <th scope="row"><%= img.pi_id %></th>
                            <td><%= img.p_name %> </td>
                            <td><img src="/img/products/<%= img.pi_path %>" height="300" /></td>
                            <td>
                              <a href="/backend/product-images/update?pi_id=<%= img.pi_id %>" class="btn btn-warning">
                                  <span data-feather="edit">Sửa</span>
                              </a>
                              <a href="/backend/product-images/delete?pi_id=<%= img.pi_id %>&pi_path=<%= img.pi_path %>" class="btn btn-danger">
                                  <span data-feather="delete">Xóa</span>
                              </a>
                            </td>
                          </tr>
                          <% }); %>
                          
                        </tbody>
                    </table>
                  </div>
            </div>
        </div>
    </div>
</body>
</html>